<?xml version="1.0" encoding="UTF-8"?>
<project>
	<extend>../ImagingRoot/project.xml</extend>
	<pomVersion>1</pomVersion>
	<artifactId>CoreValueObjects</artifactId>
	<name>CoreValueObjects</name>
	<package>gov.va.med.imaging.exchange.business</package>
	<shortDescription>
		Vix Core Business Object Definitions
	</shortDescription>
	<build>
		<sourceDirectory>main/src/java</sourceDirectory>
		<unitTestSourceDirectory>
			main/test/java
		</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/Test*.java</include>
				<include>**/Test.java</include>
			</includes>
			<resources>
				<resource>
					<directory>main/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>main/src/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>
	</build>
	<dependencies>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingCommon</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>TransactionContext</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
		
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>CoreRouterSemantics</artifactId>
			<version>${pom.currentVersion}</version>
			<type>jar</type>
		</dependency>
	</dependencies>
</project>

