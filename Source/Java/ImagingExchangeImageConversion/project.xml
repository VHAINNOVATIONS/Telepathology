<?xml version="1.0" encoding="UTF-8"?>
<project>
	<extend>../ImagingRoot/project.xml</extend>
    <pomVersion>1</pomVersion>
    <artifactId>ImagingExchangeImageConversion</artifactId>
    <name>ImagingExchangeImageConversion</name>
	<package>gov.va.med.imaging.exchange.conversion</package>
	<shortDescription>Image conversions and DICOM wrapping</shortDescription>  
	<build>
		<sourceDirectory>main/src/java</sourceDirectory>
		<unitTestSourceDirectory>main/test/java</unitTestSourceDirectory>
		<unitTest>
			<excludes>
				<exclude>**/ImagingExchangeImageConversionTestBase*.*</exclude>
				<!--  <exclude>**/*</exclude> -->
			</excludes>
			<includes>
				<include>**/*.java</include>
			</includes>
			<resources>
				<resource>
					<directory>main/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>main/src/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>			
	</build>
	<dependencies>
		<dependency>
			<groupId>dcf</groupId>
			<artifactId>LaurelBridge</artifactId>
			<version>3.3.22c</version>
			<type>jar</type>
		</dependency>
    	<dependency>
			<groupId>aware</groupId>
			<artifactId>aware-j2k</artifactId>
			<version>2.3</version>
			<type>jar</type>
		</dependency>
    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingCommon</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>CoreValueObjects</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
	    <dependency>
	      <groupId>${pom.groupId}</groupId>
	      <artifactId>ImagingDicomCommon</artifactId>
	      <version>${pom.currentVersion}</version>
	      <type>jar</type>
	    </dependency>    
	    <dependency>
	      <groupId>${pom.groupId}</groupId>
	      <artifactId>ImagingDicomDCFCommon</artifactId>
	      <version>${pom.currentVersion}</version>
	      <type>jar</type>
	    </dependency>
	    <dependency>
	      <groupId>${pom.groupId}</groupId>
	      <artifactId>ImagingDicomDCFUtilities</artifactId>
	      <version>${pom.currentVersion}</version>
	      <type>jar</type>
	    </dependency>    
    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingDicomUtilities</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingTestResources</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
	</dependencies>
</project>

