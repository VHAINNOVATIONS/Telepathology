<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org" schemaLocation="http://maven.apache.org/xsd/maven-project-3.0.0.xsd">
	<extend>../ImagingRoot/project.xml</extend>
    <pomVersion>1</pomVersion>
    <artifactId>ImagingExchangeCache</artifactId>
    <name>ImagingExchangeCache</name>
	<package>gov.va.med.imaging.exchange.cache</package>
	<shortDescription>Imaging disk cache</shortDescription>  
	<build>
		<sourceDirectory>main/src/java</sourceDirectory>
		<unitTestSourceDirectory>main/test/java</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/Test*.java</include>
			</includes>
			<resources>
				<resource>
					<directory>main/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>main/src/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>			
	</build>
	<dependencies>
    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingCommon</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>CoreValueObjects</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingCache</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
	</dependencies>
</project>

