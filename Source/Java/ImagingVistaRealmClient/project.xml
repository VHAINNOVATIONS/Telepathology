<?xml version="1.0" encoding="UTF-8"?>
<project>
	<extend>../ImagingRoot/project.xml</extend>
    <pomVersion>1</pomVersion>
    <artifactId>ImagingVistaRealmClient</artifactId>
    <name>ImagingVistaRealmClient</name>
	<package>gov.va.med.imaging.tomcat.vistarealm</package>
	<shortDescription>Classes accessible from webapps using the ImagingVistaRealm</shortDescription>  
	<build>
		<sourceDirectory>main/src/java</sourceDirectory>
		<unitTestSourceDirectory>main/test/java</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/Test*/*.java</include>
			</includes>
			<resources>
				<resource>
					<directory>main/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>main/src/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>			
	</build>
</project>

