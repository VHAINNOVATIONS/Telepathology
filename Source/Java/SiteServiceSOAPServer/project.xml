<?xml version="1.0" encoding="UTF-8"?>
<project>
	<extend>../ImagingRoot/project.xml</extend>
    <pomVersion>1</pomVersion>
    <artifactId>SiteServiceSOAPServer</artifactId>
    <name>SiteServiceSOAPServer</name>
	<package>gov.va.med.vista.siteservice</package>
	<shortDescription>Site Service SOAP Server implementation</shortDescription>  
	<build>
		<sourceDirectory>main/src/java</sourceDirectory>
		<unitTestSourceDirectory>main/test/java</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test*.java</include>
			</includes>
			<!-- 
			<excludes>
				<exclude>**/*FederationTestBase.java</exclude>
			</excludes>
			 -->
			<resources>
				<resource>
					<directory>main/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>main/src/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>			
	</build>
  <dependencies>
    <dependency>
      <groupId>${pom.groupId}</groupId>
      <artifactId>CoreValueObjects</artifactId>
      <version>${pom.currentVersion}</version>
      <type>jar</type>
    </dependency>    
    <dependency>
      <groupId>${pom.groupId}</groupId>
      <artifactId>CoreRouter</artifactId>
      <version>${pom.currentVersion}</version>
      <type>jar</type>
    </dependency>
    
    <!-- Non-Imaging dependencies -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <type>jar</type>
    </dependency>   
    <dependency>
      <groupId>jaxrpc</groupId>
      <artifactId>jaxrpc</artifactId>
      <version>1.1</version>
      <type>jar</type>
    </dependency>   
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.14</version>
      <type>jar</type>
    </dependency>   
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis</artifactId>
      <version>1.4</version>
      <type>jar</type>
    </dependency> 
    <dependency>
      <groupId>springframework</groupId>
      <artifactId>spring</artifactId>
      <version>1.2.9</version>
      <type>jar</type>
    </dependency> 
	<dependency>
		<groupId>${pom.groupId}</groupId>
		<artifactId>TransactionContext</artifactId>
		<version>${pom.currentVersion}</version>
		<type>jar</type>
	</dependency>
	<!-- 
		The following dependencies are required to compile this project but they are NOT required to
		run it.  They are annotations that are not retained in class files, 
		annotation processors (and supporting libraries). 
	-->
	<dependency>
		<groupId>${pom.groupId}</groupId>
		<artifactId>CoreRouterAnnotation</artifactId>
		<version>${pom.currentVersion}</version>
		<type>jar</type>
	</dependency>
	<dependency>
		<groupId>${pom.groupId}</groupId>
		<artifactId>CoreRouterAnnotationProcessor</artifactId>
		<version>${pom.currentVersion}</version>
		<type>jar</type>
	</dependency>
	<dependency>
		<groupId>freemarker</groupId>
		<artifactId>freemarker</artifactId>
		<version>2.3.14</version>
		<type>jar</type>
		<properties>
			<jar.manifest.classpath>true</jar.manifest.classpath>
		</properties>
	</dependency>
  </dependencies>
</project>

