<?xml version="1.0" encoding="UTF-8"?>
<project>
	<extend>../ImagingRoot/project.xml</extend>
    <pomVersion>1</pomVersion>
    <artifactId>TransactionContext</artifactId>
    <name>TransactionContext</name>
	<package>gov.va.med.imaging.transactioncontext</package>
	<shortDescription>Items that are common to the Exchange application</shortDescription>  
	<build>
		<sourceDirectory>main/src/java</sourceDirectory>
		<unitTestSourceDirectory>main/test/java</unitTestSourceDirectory>
		<unitTest>
			<excludes>
				<exclude>**/Mock*.java</exclude>
			</excludes>
			<includes>
				<include>**/*.java</include>
			</includes>
			<resources>
				<resource>
					<directory>main/test/resources</directory>
					<includes>
						<include>**/*</include>
					</includes>
					<filtering>false</filtering>
				</resource>
			</resources>
		</unitTest>
		<resources>
			<resource>
				<directory>main/src/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<filtering>false</filtering>
			</resource>
		</resources>			
	</build>
	<dependencies>
    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingCommon</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
    	<dependency>
			<groupId>${pom.groupId}</groupId>
			<artifactId>ImagingVistaRealmClient</artifactId>
			<version>${pom.currentVersion}</version>      
			<type>jar</type>
		</dependency>
	</dependencies>
</project>

