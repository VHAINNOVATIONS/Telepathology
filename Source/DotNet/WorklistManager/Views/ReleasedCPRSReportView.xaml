<Window x:Class="VistA.Imaging.Telepathology.Worklist.Views.ReleasedCPRSReportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="{Binding ReportTitle}" Width="740" Height="430"
        Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
        Icon="/MagTPWorklist;component/Images/PathWLM48.ico" 
        Loaded="Window_Loaded" ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBox Name="textBox1" FontFamily="Courier New" Margin="5"
                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" 
                 Background="LightGoldenrodYellow"/>
        
        <Button Grid.Row="1" Content="_Close" Margin="5" Width="75" Click="Close_Click" 
                IsDefault="True" />
    </Grid>
</Window>
